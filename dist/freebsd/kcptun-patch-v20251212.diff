+#!/bin/sh
+#
+# PROVIDE: kcptun_client
+# REQUIRE: NETWORKING
+
+. /etc/rc.subr
+
+name="kcptun_client"
+desc="kcptun client service"
+rcvar="${name}_enable"
+
+load_rc_config $name
+
+: ${kcptun_client_enable:="NO"}
+: ${kcptun_client_config:="/usr/local/etc/kcptun/client.json"}
+: ${kcptun_client_bin:="/usr/local/bin/kcptun-client"}
+
+pidfile="/var/run/${name}.pid"
+command="/usr/sbin/daemon"
+command_args="-u nobody -c -f -S -P ${pidfile} -r ${kcptun_client_bin} -c ${kcptun_client_config}"
+
+run_rc_command "$1"
