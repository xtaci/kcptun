#!/usr/bin/make -f

override_dh_auto_build:
        # build
        go build -mod=vendor -o kcptun-client ./client
        go build -mod=vendor -o kcptun-server ./server

override_dh_auto_install:
        install -d $(DESTDIR)/usr/bin
        install -m 755 kcptun-client $(DESTDIR)/usr/bin/kcptun-client
        install -m 755 kcptun-server $(DESTDIR)/usr/bin/kcptun-server

        #install -d $(DESTDIR)/lib/systemd/system
        #install -m 644 debian/kcptun-server.service $(DESTDIR)/lib/systemd/system/

%::
        dh $@